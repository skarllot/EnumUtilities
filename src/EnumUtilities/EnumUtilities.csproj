<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net6.0;net8.0</TargetFrameworks>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageIcon>icon.png</PackageIcon>
    <EnforceExtendedAnalyzerRules>true</EnforceExtendedAnalyzerRules>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <DefineConstants>$(DefineConstants);AllowUnsafeBlocks</DefineConstants>
    <AssemblyName>Raiqub.Generators.EnumUtilities.Abstractions</AssemblyName>
    <PackageId>Raiqub.Generators.EnumUtilities</PackageId>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\gen\EnumUtilities.Generators\EnumUtilities.Generators.csproj"
                      PackAsAnalyzer="true"
                      ReferenceOutputAssembly="false" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.0'">
    <PackageReference Include="System.Memory" Version="4.5.5" />
  </ItemGroup>

  <ItemGroup>
    <None Include="$(SolutionDir)README.md" Pack="true" PackagePath="" />
    <None Include="$(SolutionDir)logos\logo-128.png" Pack="true" PackagePath="icon.png" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Parsers\EnumStringParserOverloads.tt">
      <Generator>TextTemplatingFileGenerator</Generator>
      <LastGenOutput>EnumStringParserOverloads.cs</LastGenOutput>
    </None>
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Parsers\EnumStringParserOverloads.cs">
      <AutoGen>True</AutoGen>
      <DesignTime>True</DesignTime>
      <DependentUpon>EnumStringParserOverloads.tt</DependentUpon>
    </Compile>
  </ItemGroup>

</Project>
